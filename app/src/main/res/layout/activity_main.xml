<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nfcShow"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:text="Scan your Student Card" />

        <EditText
            android:id="@+id/XnumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter XNUMBER"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/createRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create record" />

        <Button
            android:id="@+id/deleteRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Record" />

        <Button
            android:id="@+id/loadfirebase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Firebase Instances" />

        <Button
            android:id="@+id/deleteAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete ALL Data" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>